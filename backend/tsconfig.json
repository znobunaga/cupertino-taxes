{
  "compilerOptions": {
    "target": "ES6",                                
    "module": "commonjs",                           
    "strict": true,                                 
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "outDir": "dist",                               
    "rootDir": "src",                               
    "resolveJsonModule": true,                      
    "forceConsistentCasingInFileNames": true        
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
