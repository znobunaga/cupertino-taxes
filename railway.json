{
  "$schema": "https://railway.com/railway.schema.json",
  "root": "./backend",
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "phases": {
        "build": {
          "cmds": ["npm install", "npm run build"]
        },
        "start": {
          "cmd": "npm start"
        }
      }
    }
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "multiRegionConfig": {
      "us-west2": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
